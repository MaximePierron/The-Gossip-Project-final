<!-- On inclus le contenu dans un row et une colonne pour limiter la largeur -->
<div class="container">
	<div class="row">
		<div class="col-6 mx-auto">
			<!-- Le titre de la page -->
			<h3 class="card-title text-center m-4">Acc√®s utilisateur</h3>

			<!-- Zone du formulaire -->
			<%= form_for(:session, url: session_index_path) do |f| %>

			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %>

			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control' %>

			<%= f.label :remember_me, class: "checkbox inline" do %>
			<%= f.check_box :remember_me %>
			<span>Se souvenir de moi</span>
			<% end %>

			<%= f.submit "S'identifier", class: "btn btn-primary form-control" %>
			<% end %>

			<p>Nouvel-le utilisat-eur-rice ? <%= link_to "Inscris-toi maintenant !", new_user_path %></p>

		</div>
	</div>
</div>
